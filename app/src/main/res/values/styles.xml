<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bgToolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGray</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="capfale" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="menuitemcolor" parent="AppTheme">
        <item name="android:textColorPrimary">@color/bgToolbar</item>
        <item name="drawerArrowStyle">@style/changecolordrawertoogle</item>
    </style>

    <style name="changecolordrawertoogle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorWhite</item>
    </style>
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">#0d0c0c</item>
        <item name="android:textColor">#0e0e0e</item>
        <item name="android:textColorPrimary">#0b0b0b</item>
    </style>
</resources>
